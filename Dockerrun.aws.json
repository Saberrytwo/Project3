{
    "AWSEBDockerrunVersion": 3,
    "containerDefinitions": [
      {
        "name": "ui",
        "image": "{$AWS_ACCOUNT_ID}.dkr.ecr.{$AWS_DEFAULT_REGION}.amazonaws.com/app-ui",
        "hostname": "ui",
        "essential": true,
        "memory": 1024,
        "portMappings": [
          {
            "hostPort": 8080,
            "containerPort": 8080
          }
        ]
      },
      {
        "name": "nginx",
        "image": "{$AWS_ACCOUNT_ID}.dkr.ecr.{$AWS_DEFAULT_REGION}.amazonaws.com/app-nginx",
        "hostname": "nginx",
        "essential": true,
        "portMappings": [ 
          {
            "hostPort": 80,
            "containerPort": 80
          }
        ],
        "links": ["ui"],
        "memory": 512
      }
    ]
  }